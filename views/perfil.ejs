<!DOCTYPE html>
<html lang="pt-br">
    
    <%- include("./header.ejs"); %>

        <main id="main">
            <div id="principal" class="blc">
                <div class="divPerfil">
                    
                    <form action="/update" method="POST" enctype="multipart/form-data">
                        <input type="file" name="ft" id="ft">
                        <img src="/fts/<%=image%>" name="foto" class="perfilFt" accept = "image/png, image/jpeg"/> <br>
                        <input type="text" name="nome" value="<%= nome %>">
                        <input type="text" name="email" value="<%= email %>">
                        <input type="hidden" name="token" value="<%=token%>">
                        <input type="submit" value="Alterar dados">
                    </form>
                    
                    <hr>
                    <form action="/delet" method="POST">
                        <input type="hidden" name="token" value="<%=token%>">
                        <input type="submit" name="apagar" class="nop" value="Apagar conta">
                    </form><br>
                    <button name="deslogar" class="nop" onclick="window.location.href='/deslog'"> Deslogar </button><br><br>
                </div>
            </div>
            
            <%- include("./menu.ejs"); %>
            
        </main>

        <!-- Script do axios -->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <article>
            <div class="icons">
                <img src="/img/inst.jpeg" onclick="window.location.href='https:\/\/www.instagram.com/'" alt="instagram">
                <img src="/img/email.png" onclick="window.location.href='https:\/\/mailto:greenlifesustentavel@gmail.com'" alt="email">
            </div>
        </article>

        <footer class="blc" id="footer"> 
            <div id="back-wave">
                
            </div>
            <label>Green Life<br><br>
                <label class="foot_mob">
                    <span><a href="/qs?token=<%=token%>">Quem Somos?</a></span><br>
                    <span><a href="/qs?token=<%=token%>#mis">Missão</a></span>
                    <span><a href="/qs?token=<%=token%>#vis">Visão</a></span>
                    <span><a href="/qs?token=<%=token%>#val">Valores</a></span>
                </label>
            </label>
        </footer>

        <%- include("./scripts.ejs"); %>

    </body>

</html>